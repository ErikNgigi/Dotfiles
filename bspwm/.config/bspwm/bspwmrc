#! /bin/sh

# colors
blue="#0066FF"
silver="#808080"
light_blue="#327bd1"

pgrep -x sxhkd > /dev/null || sxhkd &
"$HOME/.config/polybar/launch.sh"

bspc monitor LVDS -d 1 2 3 4 5
# bspc monitor VGA-0 -d 1 2 3 4 5

##--Global Settings--##
bspc config focused_border_color    "$blue" 
bspc config normal_border_color     "$silver"
bspc config active_border_color     "$silver"
bspc config presel_feedback_color   "$light_blue"

##--Monitor and Desktop Settings--##
bspc config top_padding           32
bspc config bottom_padding        2
bspc config left_padding          2
bspc config right_padding         2
bspc config border_width          2
bspc config window_gap            7
bspc config split_ratio           0.50
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config focus_follows_pointer true
bspc config single_monocle        false

bspc rule -a firefoxdeveloperedition desktop=^2
bspc rule -a TIPP10 desktop=^3
bspc rule -a TelegramDesktop desktop=^4
